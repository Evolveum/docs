[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = false
max_line_length = 130
tab_width = 4
trim_trailing_whitespace = true
ij_continuation_indent_size = 8
ij_formatter_off_tag = @formatter:off
ij_formatter_on_tag = @formatter:on
ij_formatter_tags_enabled = true
ij_smart_tabs = false
ij_visual_guides = 100, 130, 150, 180
ij_wrap_on_typing = false

[{.asciidoctorconfig, *.ad, *.adoc, *.asciidoc}]
ij_asciidoc_formatting_enabled = true
# We generally prefer this, and always end line after the sentence, but long sentences
# can be split to multiple lines + sometimes reformat joins sentences (e.g. after sentence in bold).
ij_asciidoc_one_sentence_per_line = false
